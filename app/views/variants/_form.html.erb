<%= form_with(model: [product, variant], class: "contents") do |form| %>
  <% if variant.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(variant.errors.count, "error") %> prohibited this variant from being saved:</h2>

      <ul class="list-disc ml-6">
        <% variant.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :body_material %>
    <%= form.text_field :body_material, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": variant.errors[:body_material].none?, "border-red-400 focus:outline-red-600": variant.errors[:body_material].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :size_mm %>
    <%= form.text_field :size_mm, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": variant.errors[:size_mm].none?, "border-red-400 focus:outline-red-600": variant.errors[:size_mm].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>