<div id="<%= dom_id product %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1"><%= t("activerecord.attributes.product.name", default: "Name") %>:</strong>
    <%= Mobility.with_locale(I18n.locale) { product.name } %>
  </div>
  <div>
    <strong class="block font-medium mb-1"><%= t("activerecord.attributes.product.description", default: "Description") %>:</strong>
    <%= Mobility.with_locale(I18n.locale) { product.description } %>
  </div>
  <div>
    <strong class="block font-medium mb-1"><%= t("activerecord.attributes.product.subsubcategory", default: "Subsubcategory") %>:</strong>
    <%= product.subsubcategory.name %>
  </div>
</div>